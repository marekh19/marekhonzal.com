const homepageTitle = 'Building thoughtful web experiences'
---

<BaseLayout pageTitle={defaultSeo.pageTitle(homepageTitle)}>
  <HeroSection />
  <AboutSection className="mb-40" />
  <BlogSection className="mb-40" />
  <ProjectsSection />
</BaseLayout>
