---
import AboutSection from '@/components/Homepage/sections/About/AboutSection.astro'
import BlogSection from '@/components/Homepage/sections/Blog/BlogSection.astro'
import HeroSection from '@/components/Homepage/sections/Hero/HeroSection.astro'
import ProjectsSection from '@/components/Homepage/sections/Projects/ProjectsSection.astro'
import { defaultSeo } from '@/config/seo'
